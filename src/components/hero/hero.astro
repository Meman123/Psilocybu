<style>
  .hero-section {
    background-color: #000;
  }

  .video-container {
    width: 100%;
    aspect-ratio: 16 / 9;
    margin: auto; 
    
    /* --- CÁLCULO ACTUALIZADO --- */
    /* Altura máxima = 100% de la pantalla MENOS la altura del header móvil */
    max-height: calc(100vh - var(--header-height-mobile));
  }

  /* Ajustamos el cálculo para la altura del header en pantallas grandes */
  @media (min-width: 768px) {
    .video-container {
      max-height: calc(100vh - var(--header-height-desktop));
    }
  }

  .video-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }
</style>

<section class="hero-section">
  <div class="video-container">
    <iframe 
      src="https://player.vimeo.com/video/949386936?autoplay=1&loop=1&muted=1&background=1&dnt=1" 
      allow="autoplay; fullscreen; picture-in-picture"
      loading="lazy"
      title="Video de fondo de Psilocybu">
    </iframe>
  </div>
</section>

<script src="https://player.vimeo.com/api/player.js"></script>