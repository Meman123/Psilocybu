---
import posterImage from '@/assets/hero-poster.webp'; // Asegúrate de que la ruta a tu poster sea correcta
---

<style>
  .video-container {
    position: relative;
    width: 100%;
    /* Mantiene la proporción 16:9 y se ajusta a la altura del viewport */
    aspect-ratio: 16 / 9;
    max-height: calc(100vh - var(--header-height-mobile));
    background-color: #000;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .video-container {
      max-height: calc(100vh - var(--header-height-desktop));
    }
  }

  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Asegura que el video cubra todo el espacio sin deformarse */
    object-fit: contain;
  }
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<div class="video-container">
  <h1>Psilocybu<span class="visually-hidden"> - Kits de cultivo de hongos en Colombia</span></h1>
  <video
    class="video-background"
    autoplay
    loop
    muted
    playsinline
    poster={posterImage.src}
    src="/hero-video.mp4"
    title="Video de fondo de Psilocybu"
  >
    Tu navegador no puede reproducir este video.
  </video>
</div>