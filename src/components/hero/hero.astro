---
import { Image } from 'astro:assets';
// Asegúrate de que este sea el nombre y la ruta correcta de tu imagen en src/assets
import growkitImage from '@/assets/growkit-psilocybu.png'; 
---

<style>
  .intro-section {
    /* Mantiene la estructura de secciones separadas */
  }

  /* --- Módulo de Video --- */
  .video-wrapper {
    background-color: #000;
  }
  .video-container {
    width: 100%;
    aspect-ratio: 16 / 9;
    margin: auto; 
    max-height: calc(100vh - var(--header-height-mobile));
  }
  @media (min-width: 768px) {
    .video-container {
      max-height: calc(100vh - var(--header-height-desktop));
    }
  }
  .video-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* --- Módulo de Contenido --- */
  .content-wrapper {
    background-color: var(--color-background);
    padding: var(--spacing-xl) 0;
  }
  .content-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  /* --- Columna de Texto (Izquierda) --- */
  .text-column {
    flex: 1.2; /* Damos un poco más de espacio al texto */
    text-align: center;
  }
  .headline {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
  }
  .headline .highlight {
    color: var(--color-accent); /* Mantenemos el highlight solo en una parte */
  }
  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    background-color: #f7fafc;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--border-radius-medium);
  }
  .feature-item .icon {
    font-family: 'Material Icons';
    color: var(--color-accent);
  }
  .feature-item p {
    font-weight: var(--font-weight-semibold);
    color: #333;
  }

  /* --- Columna de Producto (Derecha) --- */
  .product-column {
    flex: 1; /* El producto ocupa un poco menos de espacio */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
  }
  .product-image-wrapper {
    width: 100%;
    max-width: 320px; /* Controlamos el tamaño máximo de la imagen */
    margin: 0 auto;
  }
  /* Hacemos que la imagen generada por Astro sea responsiva */
  .product-image-wrapper :global(img) {
    width: 100%;
    height: auto;
  }
  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    width: 100%;
    max-width: 320px;
  }
  .btn {
    font-weight: var(--font-weight-bold);
    padding: 12px 24px;
    border-radius: 9999px;
    box-shadow: var(--box-shadow-subtle);
    transition: all 0.3s ease;
    text-align: center;
    font-size: 1rem;
  }
  .btn:hover {
    transform: scale(1.05);
  }
  .btn-primary {
    background-color: var(--color-accent);
    color: var(--color-text);
  }
  .btn-secondary {
    background-color: var(--color-background);
    border: var(--border-width-thin) solid #cbd5e0;
  }

  /* --- Responsive --- */
  @media (min-width: 900px) {
    .content-container {
      flex-direction: row;
      align-items: center;
    }
    .text-column {
      text-align: left;
    }
    .feature-item {
      background: transparent;
      padding-left: 0;
    }
    .cta-buttons {
      flex-direction: row;
    }
  }

</style>

<section class="intro-section">
  <div class="video-wrapper">
    <div class="video-container">
      <iframe 
        src="https://player.vimeo.com/video/949386936?autoplay=1&loop=1&muted=1&background=1&dnt=1&quality=720p" 
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        loading="eager"
        allowfullscreen="allowfullscreen"
        title="Video de fondo de Psilocybu">
      </iframe>
    </div>
  </div>

  <div class="content-wrapper">
    <div class="content-container">
      <div class="text-column">
        <h1 class="headline">¡Cosecha tus honguitos en solo <span class="highlight">2 semanas!</span></h1>
        <ul class="features-list">
          <li class="feature-item">
            <span class="icon">check_circle</span>
            <p>Listo para usar, fácil y rápido</p>
          </li>
          <li class="feature-item">
            <span class="icon">verified_user</span>
            <p>100% seguro y de máxima calidad</p>
          </li>
          <li class="feature-item">
            <span class="icon">eco</span>
            <p>Conecta con la naturaleza sin experiencia</p>
          </li>
        </ul>
      </div>
      
      <div class="product-column">
        <div class="product-image-wrapper">
          <Image 
            src={growkitImage}
            alt="Growkit de Psilocybu con hongos Albino Averys"
            format="webp"
            quality={90}
            width={400}
            height={400}
          />
        </div>
        <div class="cta-buttons">
          <a href="#" class="btn btn-primary">Compra tu GrowKit</a>
          <a href="#" class="btn btn-secondary">Cómo funciona</a>
        </div>
      </div>
    </div>
  </div>
</section>